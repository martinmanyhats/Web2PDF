= form_for @pdf do |f|
  - if @pdf.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pdf.errors.count, "error")} prohibited this pdf from being saved:"
      %ul
        - @pdf.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :website
    = f.text_field :website
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :size
    = f.number_field :size
  .field
    = f.label :notes
    = f.text_field :notes
  .actions
    = f.submit 'Save'
