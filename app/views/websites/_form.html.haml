= form_for @website do |f|
  - if @website.errors.any?
    #error_explanation
      %h2= "#{pluralize(@website.errors.count, "error")} prohibited this website from being saved:"
      %ul
        - @website.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :auto_refresh
    = f.checkbox :auto_refresh
  .field
    = f.label :refresh_period
    = f.number_field :refresh_period
  .field
    = f.label :publish_url
    = f.text_field :publish_url
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :notes
    = f.text_field :notes
  .actions
    = f.submit 'Save'
